{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "delete old objects",
        },
        {
            "type": "shell",
            "label": "delete old objects",
            "command": "/bin/rm",
            "args": [
                "-f",
                "${fileDirname}/*.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
        },
    ],
    "version": "2.0.0"
}